@page "/counter"
@using MauiTheme.BlazorHybrid
@inject IMauiThemeHybrid MauiTheme

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary" @onclick="ChangeTheme">Switch Theme</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    void ChangeTheme()
    {
        MauiTheme.CurrentAppTheme = Core.MauiAppTheme.Light;
    }
}
